@using BlazorApp_Login.Data;
@if (showPopup)
{
	<div class="modal-backdrop show"></div>
	<div class="modal fade show" style="display:block" tabindex="-1">
		<div class="modal-dialog">
			<div class=" modal-content">
				<div class="modal-header">
					<h5 class=" modal-title" >Confirm Delete</h5>
					<button type="button" @onclick = "Hide" class=" btn-close" data-bs-dismiss = "modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p>@BodyContent</p>
				</div>
				<div class="modal-footer">
					<button type="button" @onclick = "Hide" class="btn btn-secondary" data-bs-dismiss=" modal">Close</button>
					<button type="button" @onclick="Confirm" class="btn btn-danger">Confirm</button>
				</div>
			</div>
		</div>
	</div>
}
@code{
	private bool showPopup = true;
	public User ContactToDelete { get; set; }
	public string BodyContent{ get; set; }

	[Parameter]
	public EventCallback<User> OnConfirm { get; set; }

	public void Show() => showPopup = true;
	public void Hide() => showPopup = false;

	private async Task Confirm()
	{
		await OnConfirm.InvokeAsync(ContactToDelete);
	}
}